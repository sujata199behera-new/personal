  <title>Fixed Ratio Image Cropper</title>
  <link rel="stylesheet" href="https://unpkg.com/cropperjs@1.6.2/dist/cropper.min.css" />
  <script src="https://unpkg.com/cropperjs@1.6.2/dist/cropper.min.js"></script>

  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      background: #f9f9f9;
    }

    h1 {
      margin-bottom: 1rem;
    }

    #imageContainer {
      width: 80%;
      max-width: 500px;
      border: 2px dashed #aaa;
      border-radius: 10px;
      padding: 1rem;
      background: white;
      margin-bottom: 1rem;
      text-align: center;
    }

    #preview {
      max-width: 100%;
      display: none;
    }

    #cropButton {
      background: #0078d7;
      color: white;
      border: none;
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 6px;
      cursor: pointer;
      margin-top: 10px;
    }

    #cropButton:hover {
      background: #005fa3;
    }

    #outputContainer {
      margin-top: 20px;
      text-align: center;
    }

    #outputCanvas {
      max-width: 100%;
      border: 1px solid #ccc;
      border-radius: 6px;
    }

    footer {
      margin-top: 2rem;
      color: #777;
      font-size: 0.9rem;
    }
  </style>
